{
    "name": "mfonte/imdb-scraper",
    "description": "IMDB API that can fetch film data and search results",
    "keywords": [
        "imdb",
        "api",
        "film",
        "movie",
        "search"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Harry Merritt",
            "email": "harry@mrrtt.me"
        },
        {
            "name": "Maurizio Fonte",
            "email": "fonte.maurizio@gmail.com"
        }
    ],
    "type": "package",
    "require": {
        "php": ">=7.3",
        "paquettg/php-html-parser": "^3.0",
        "monolog/monolog": "^2.10",
        "voku/simple-cache": "^4.1",
        "voku/simple_html_dom": "^4.8",
        "voku/portable-utf8": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.16",
        "php-coveralls/php-coveralls": "2.5.2"
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Mfonte\\ImdbScraper\\": "src/"
        }
    }
}
